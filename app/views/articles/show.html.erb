<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article),
    method: :delete,
    # confirmation of delete, provided in rails apps.
    data: { confirm: "Are you sure?" } %>
  </li>
</ul>

